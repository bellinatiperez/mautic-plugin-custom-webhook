  "email": "{contactfield=email}",
  "phone": "{contactfield=phone}",
  "company": "{contactfield=company}",
  "variables": [
    {
      "key": "document",
      "value": "{contactfield=document}"
    },
    {
      "key": "city",
      "value": "{contactfield=city}"
    },
    {
      "key": "country",
      "value": "{contactfield=country}"
    }
